@model WebApplication1.Models.Product

@{
    ViewBag.Title = @Html.DisplayFor(model => model.Category.Name);
}

<section id="page-breadcrumb">
    <div class="vertical-center sun">
        <div class="container">
            <div class="row">
                <div class="action">
                    <div class="col-sm-12">
                        <h1 class="title">@ViewBag.Title</h1>
                        <p>@ViewBag.Message</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="portfolio-information" class="padding-top">
    <div class="container">
        <div class="row">
            <div class="col-sm-5">
                <img src="~/Images/products/@(Model.Name).jpg" class="img-responsive" alt="">
            </div>
            <div class="col-sm-7">
                <div class="project-name overflow">
                    <h2 class="bold">@Html.DisplayFor(model => model.Name)</h2>
                    <ul class="nav navbar-nav navbar-default">
                        <li><a href="#"><i class="fa fa-clock-o"></i>@Html.DisplayFor(model => model.LastUpdated)</a></li>
                        <li><a href="#"><i class="fa fa-tag"></i>Branding</a></li>
                    </ul>
                </div>
                <div class="project-info overflow">
                    <h3>Product Info</h3>
                    <p>@Html.Raw(Model.Description)</p>
                </div>
                <div class="live-preview">
                    <a href="@Url.Action("Contact", "Home")" class="btn btn-common uppercase">Enquiry</a>
                </div>
            </div>
        </div>
    </div>
</section>
